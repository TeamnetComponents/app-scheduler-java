<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">


    <changeSet id="20150514120636" author="teamnet">
        <createTable tableName="T_SCHEDULE_T_DAYOFWEEK">
            <column name="schedule_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="dayofweek_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="schedule_id, dayofweek_id"
                       tableName="T_SCHEDULE_T_DAYOFWEEK"/>

        <addForeignKeyConstraint baseColumnNames="schedule_id"
                                 baseTableName="T_SCHEDULE_T_DAYOFWEEK"
                                 constraintName="fk_dayofweek_schedule_id"
                                 referencedColumnNames="id"
                                 referencedTableName="T_SCHEDULE"/>

        <addForeignKeyConstraint baseColumnNames="dayofweek_id"
                                 baseTableName="T_SCHEDULE_T_DAYOFWEEK"
                                 constraintName="fk_schedule_dayofweek_id"
                                 referencedColumnNames="id"
                                 referencedTableName="T_DAYOFWEEK"/>
    </changeSet>

</databaseChangeLog>