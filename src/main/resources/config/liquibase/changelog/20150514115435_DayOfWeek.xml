<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>
    <property name="activated" value="true" dbms="postgresql"/>
    <property name="activated" value="1" dbms="oracle"/>

    <property name="pk_t_module" value="HIBERNATE_SEQUENCE.NEXTVAL" dbms="oracle"/>
    <property name="pk_t_module" value="nextval('t_module_id_module_seq')" dbms="postgresql"/>
    <property name="pk_t_module" value="null" dbms="!oracle,!postgresql"/>

    <property name="pk_t_module_right" value="HIBERNATE_SEQUENCE.NEXTVAL" dbms="oracle"/>
    <property name="pk_t_module_right" value="nextval('t_module_right_id_module_right_seq')" dbms="postgresql"/>
    <property name="pk_t_module_right" value="null" dbms="!oracle,!postgresql"/>

    <!--
        Added the entity DayOfWeek.
    -->
    <changeSet id="20150514115435" author="teamnet">
        <createTable tableName="T_DAYOFWEEK">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="code" type="varchar(255)"/>
            <column name="name" type="varchar(255)"/>
            <column name="value" type="integer"/>
        </createTable>


        <insert tableName="T_MODULE">
            <column name="ID_MODULE" valueComputed="${pk_t_module}"/>
            <column name="VERSION" value="1"/>
            <column name="CODE" value="day_of_week"/>
            <column name="TYPE" value="1"/>
            <column name="DESCRIPTION" value="DayOfWeek"/>
            <column name="FK_PARENT_MODULE" valueComputed="(SELECT ID_MODULE from T_MODULE where code = 'scheduler')"/>
        </insert>

        <insert tableName="T_MENU">
            <column name="parent_id" valueComputed="(SELECT id from T_MENU where module_name = 'scheduler')"/>
            <column name="name" value="DayOfWeek"/>
            <column name="route" value="dayOfWeek"/>
            <column name="active" value="1"/>
            <column name="module_id" valueComputed="(SELECT ID_MODULE from T_MODULE where code = 'day_of_week')"/>
        </insert>

        <insert tableName="T_MODULE_RIGHT">
            <column name="ID_MODULE_RIGHT" valueComputed="${pk_t_module_right}"/>
            <column name="MODULE_RIGHT" value="1"/>
            <column name="VERSION" value="1"/>
            <column name="FK_MODULE" valueComputed="(SELECT ID_MODULE from T_MODULE where CODE = 'day_of_week')"/>
        </insert>
        <insert tableName="T_ROLE_MODULE_RIGHTS">
            <column name="fk_role" valueComputed="(SELECT ID_ROLE from T_ROLE where CODE = 'ROLE_ADMIN' )"/>
            <column name="fk_module_right"
                    valueComputed="(SELECT ID_MODULE_RIGHT from T_MODULE_RIGHT where  MODULE_RIGHT = 1
                                    AND FK_MODULE = (SELECT ID_MODULE from T_MODULE where CODE = 'day_of_week'))"/>
        </insert>

    </changeSet>

    <changeSet id="20150515151435" author="teamnet">
        <insert tableName="T_DAYOFWEEK">
            <column name="code" value="MON"/>
            <column name="name" value="Luni"/>
            <column name="value" value="1"/>
        </insert>
        <insert tableName="T_DAYOFWEEK">
            <column name="code" value="TUE"/>
            <column name="name" value="Marti"/>
            <column name="value" value="2"/>
        </insert>
        <insert tableName="T_DAYOFWEEK">
            <column name="code" value="WED"/>
            <column name="name" value="Miercuri"/>
            <column name="value" value="3"/>
        </insert>
        <insert tableName="T_DAYOFWEEK">
            <column name="code" value="THU"/>
            <column name="name" value="Joi"/>
            <column name="value" value="4"/>
        </insert>
        <insert tableName="T_DAYOFWEEK">
            <column name="code" value="FRI"/>
            <column name="name" value="Vineri"/>
            <column name="value" value="5"/>
        </insert>
        <insert tableName="T_DAYOFWEEK">
            <column name="code" value="SAT"/>
            <column name="name" value="Sambata"/>
            <column name="value" value="6"/>
        </insert>
        <insert tableName="T_DAYOFWEEK">
            <column name="code" value="SUN"/>
            <column name="name" value="Duminica"/>
            <column name="value" value="7"/>
        </insert>
    </changeSet>


</databaseChangeLog>
